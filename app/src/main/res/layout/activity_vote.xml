<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteActivity"
    android:background="@drawable/signin_up">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="VOTE"
        android:textColor="@color/Black"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <ImageButton
        android:id="@+id/thumbUpBtn"
        android:layout_width="325dp"
        android:layout_height="85dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/roundsquare"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/ic_thumbup" />

    <ImageButton
        android:id="@+id/thumbDownBtn"
        android:layout_width="325dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundsquare"
        app:layout_constraintEnd_toEndOf="@+id/thumbUpBtn"
        app:layout_constraintStart_toStartOf="@+id/thumbUpBtn"
        app:layout_constraintTop_toBottomOf="@+id/thumbUpBtn"
        app:srcCompat="@drawable/ic_thumbdown" />
</androidx.constraintlayout.widget.ConstraintLayout>